# .env 文件 - FileFlow Bridge 环境变量配置
# 将此文件复制为 .env 并根据需要自定义

# HTTP 服务端口
FFB_HTTP_PORT=8000

# TCP 服务端口
FFB_TCP_PORT=8888

# 最大文件大小 (MB)
FFB_MAX_FILE_SIZE=100

# 认证令牌长度
FFB_TOKEN_LEN=8

# 日志级别 (DEBUG, INFO, WARN, ERROR)
FFB_LOG_LEVEL=INFO

# 日志文件路径
FFB_LOG_PATH=/var/log/fileflow_bridge.log

# 服务器主机地址 (留空使用默认值)
FFB_HOST=

# 是否启用 HTTPS (true/false)
FFB_ENABLE_TLS=false

# TLS 证书路径 (当启用 HTTPS 时)
FFB_TLS_CERT_PATH=
FFB_TLS_KEY_PATH=